rules_version = '2';

// Cloud Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow all authenticated users to read, write, and delete any files
    // Validation will be handled in application code
    match /users/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to shared folders
    match /shared/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write to public folders
    match /public/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
