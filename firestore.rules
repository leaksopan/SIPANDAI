rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // File collection rules - users can only access their own files
    match /files/{fileId} {
      allow read, write, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Folder collection rules - users can only access their own folders
    match /folders/{folderId} {
      allow read, write, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Test collection untuk debugging
    match /test/{testId} {
      allow read, write, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Fallback rule for other collections (temporary, expire after 30 days)
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 9, 13);
    }
  }
}
